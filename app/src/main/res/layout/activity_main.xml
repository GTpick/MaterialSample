<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <Button
            android:id="@+id/btn_drawer_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DrawerActivity1"
            />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DrawerActivity2"
            />

        <Button
            android:id="@+id/btn_tab_navi_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TabNavigation" />

        <Button
            android:id="@+id/btn_unn_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__Activity"
            />
    </LinearLayout>

</LinearLayout>
